{
  "name": "Sensitive Data Detector",
  "description": "Analyses and warns you if your interaction with ChatGPT contains sensitive data",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": { "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "src/config.js",
        "src/state/alertStore.js",
        "src/services/detectorClient.js",
        "src/services/riskUtils.js",
        "src/services/pdfAnalyzer.js",
        "src/ui/panel.js",
        "src/ui/highlights.js",
        "src/ui/loadingState.js",
        "src/dom/chatSelectors.js",
        "src/controllers/sendInterceptor.js",
        "src/controllers/messageAnalyzer.js",
        "src/controllers/fileInterceptor.js",
        "src/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ]
}
