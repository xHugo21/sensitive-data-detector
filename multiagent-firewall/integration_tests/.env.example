# ============================================================================
# Sensitive Data Detector - Integration Tests Configuration
# ============================================================================

# LLM Configuration
# -----------------
# The LLM provider to use
LLM_PROVIDER=ollama

# The model to use for LLM detection
LLM_MODEL=gemma3:4b

# Your API key for the LLM provider
LLM_API_KEY=your-api-key-here

# Extra parameters for the LLM. Useful to set temperature to 0 for consistent results.
LLM_EXTRA_PARAMS={"temperature":0, "top_p":1.0, "frequency_penalty":0, "presence_penalty":0, "repeat_penalty":1.0, "top_k":1, "drop_params":true, "response_format":{"type":"json_object"}}

# Force LLM detector to always run even if decision is already 'block'
FORCE_LLM_DETECTOR=false

# Integration Dataset Configuration
# ---------------------------------
# Locales to use for data generation (either 'us' or 'intl')
INTEGRATION_DATASET_LOCALES=us

# Maximum number of test cases
INTEGRATION_DATASET_MAX_CASES=200

# Optional. Leaving it unset applies a random seed on each run
INTEGRATION_DATASET_SEED=1337

# NER Configuration
# -----------------
# Named Entity Recognition settings (optional)
NER_ENABLED=false
NER_MODEL=urchade/gliner_multi-v2.1
NER_MIN_SCORE=0.7

# Code Analysis Configuration (Proprietary Code)
# ----------------------------------------------
# Enable or disable proprietary code detection
CODE_ANALYSIS_ENABLED=false

# Git repository URL to check against (supports HTTPS)
# Separate multiple URLs with commas
CODE_ANALYSIS_REPO_URL=https://github.com/your-org/your-repo.git,https://github.com/another-org/another-repo.git

# Optional: Personal Access Token for private repositories
CODE_ANALYSIS_AUTH_TOKEN=your-github-pat

# Minimum similarity threshold (0.0-1.0) to flag code as proprietary
CODE_ANALYSIS_SIMILARITY_THRESHOLD=0.85

# Refresh interval in seconds for pulling repo updates (default: 3600)
CODE_ANALYSIS_REFRESH_INTERVAL=3600

# Optional: Directory to cache the cloned repository
CODE_ANALYSIS_CACHE_DIR=/tmp/code-similarity-cache

# Minimum snippet length to analyze (default: 50 chars)
CODE_ANALYSIS_MIN_SNIPPET_LENGTH=50
