# sensitive-data-detector backend base URL
BACKEND_URL=http://127.0.0.1:8000
# Endpoint that analyses prompts
BACKEND_DETECT_ENDPOINT=/detect
# Timeout for backend calls
BACKEND_TIMEOUT_SECONDS=10
# Optional: override backend DETECTION_MODE (zero-shot, enriched-zero-shot, few-shot)
BACKEND_DETECTION_MODE=

# none/low/medium/high risk required to block
PROXY_MIN_BLOCK_RISK=low

# Timeout for provider HTTP requests
UPSTREAM_TIMEOUT_SECONDS=30

# Base URLs for the upstream APIs we emulate
OPENAI_API_BASE=https://api.openai.com
COPILOT_API_BASE=https://api.githubcopilot.com
GROQ_API_BASE=https://api.groq.com
